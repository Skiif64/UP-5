<Page x:Class="UP_3.AutorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UP_3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutorizationPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center" Margin="180,20" Grid.Row="1" VerticalAlignment="Top">
            <TextBlock FontFamily="Comic Sans MS"
                       FontSize="20"
                       Text="Авторизация" Margin="10"/>
            <TextBlock FontFamily="MS Reference Sans Serif" FontSize="12" Text="Логин" Margin="5"/>
            <TextBox x:Name="login" FontSize="12" Margin="5"/>
            <TextBlock FontFamily="MS Reference Sans Serif" FontSize="12" Text="Пароль" Margin="5"/>
            <PasswordBox x:Name="password" FontSize="12" Margin="5"/>
            <Button x:Name="loginButton" FontFamily="MS Reference Sans Serif" FontSize="12" Content="Войти" Margin="5,10" Click="loginButton_Click"/>
        </StackPanel>

    </Grid>
</Page>
